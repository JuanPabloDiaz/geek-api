---
import Layout from "../layouts/Layout.astro";

import "@new-ui/foundations";
---

<Layout
  site="Geek APIs | 404 Page Not Found"
  title="Oops!"
  tagline="Sorry, the page you are looking for does not exist."
  description="Page not found. The requested page does not exist on Geek APIs. Return to discover 1500+ curated APIs for developers."
>
<main class="error-page">
    <div class="error-content">
        <div class="error-message">
            <h1>404</h1>
            <p>Page Not Found</p>
        </div>
        <div class="btn-group">
            <a
                href="https://geek-api.jpdiaz.dev/"
                class="submit-btn"
                tabindex="0">Back to Home</a
            >
        </div>
    </div>
</main>

<style>
    .error-page {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        padding: 2rem;
    }

    .error-content {
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

    .error-message h1 {
        font-size: 6rem;
        font-weight: bold;
        margin: 0;
        color: var(--accent);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        font-family: var(--body-copy);
    }

    .error-message p {
        font-size: 1.5rem;
        margin: 1rem 0 2rem 0;
        color: var(--text-secondary);
        font-family: var(--body-copy);
    }

    .btn-group {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
    }

    .submit-btn {
        padding: 0.5625rem 0.9375rem;
        border: 1px solid var(--accent);
        outline: none;
        text-decoration: none;
        color: var(--text-primary);
        background-color: var(--background);
        border-radius: 0;
        font-size: var(--desktop-body-sm);
        font-family: var(--body-copy);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .submit-btn:hover {
        background-color: var(--accent);
        color: var(--background);
    }

    .submit-btn:active {
        background-color: var(--background);
        color: var(--accent);
    }

    @media (max-width: 768px) {
        .error-message h1 {
            font-size: 4rem;
        }

        .error-message p {
            font-size: 1.2rem;
        }

        .error-page {
            min-height: 50vh;
            padding: 1rem;
        }
    }
</style>
</Layout>
